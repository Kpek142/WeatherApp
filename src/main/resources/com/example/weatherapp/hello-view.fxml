<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="rootPane" prefHeight="800.0" prefWidth="1410.0" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherapp.WeatherController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="WEATHER APP" textAlignment="CENTER" wrappingWidth="690.0">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Text>
        <Label fx:id="labelTitle" text="КИСЛОТНАЯ ПОГОДА:" textFill="#08ff00" />
        <TextField fx:id="searchField" promptText="Введите город..." />
        <ListView fx:id="suggestionsList" prefHeight="120.0" visible="false" />
        <Label fx:id="weatherInfo" alignment="TOP_LEFT" prefHeight="400.0" prefWidth="1625.0" text="ОЖИДАНИЕ ВЫБОРА..." wrapText="true">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
    </children>
</VBox>
